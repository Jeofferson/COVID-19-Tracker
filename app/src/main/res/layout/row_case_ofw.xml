<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp">

    <RelativeLayout
        style="@style/myCardViewSurface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/layoutCaseHeader"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCaseDp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_006_sneeze"/>

            <TextView
                style="@style/text"
                android:id="@+id/lblCaseId"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="24sp"
                android:text="OF1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/layoutCaseHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/text2"
                android:id="@+id/lblAge"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: 25"/>

            <TextView
                style="@style/text2"
                android:id="@+id/lblSex"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sex: Male"/>

            <TextView
                style="@style/text2"
                android:id="@+id/lblCountry"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country: China"/>

            <TextView
                style="@style/text2"
                android:id="@+id/lblDateReported"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Reported: January 01, 2020 (Mon)"/>

            <TextView
                style="@style/text2"
                android:id="@+id/lblDateConfirmed"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Confirmed: January 01, 2020 (Mon)"/>

            <TextView
                style="@style/text2"
                android:id="@+id/lblStatus"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Recovered"/>

            <TextView
                style="@style/text2"
                android:id="@+id/lblRemarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remarks: Repatriated"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>